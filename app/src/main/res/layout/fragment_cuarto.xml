<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0F2F1"
    tools:context=".CuartoFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/icono_useropc"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#1b4332"
            android:src="@drawable/ic_person_white_24dp"
            ></ImageView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola Juan"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:background="#1b4332"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Pulse en la opcion deseada."
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="italic"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bonotesfinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        >
        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52b788"
            android:shadowColor="#7400B8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:text="Informacion del Usuario"
            />
        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/persona_acargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52b788"
            android:shadowColor="#7400B8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:text="Personas de Cuidado"
            />
        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/notas_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52b788"
            android:shadowColor="#7400B8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:text="Notas del paciente"
            />
        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/mediciones_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52b788"
            android:shadowColor="#7400B8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:text="Mediciones del paciente"
            />
        <Button
            android:id="@+id/recuperar_receta"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:background="#52b788"
            android:shadowColor="#7400B8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:text="Recuperar Informacion"
            />
    </LinearLayout>
</LinearLayout>
</FrameLayout>